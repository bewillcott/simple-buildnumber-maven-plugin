<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%-5level %-12logger{1}#%-14M - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.bew.mojo.buildnumber.simple.CreateXMLMojo" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>        
        <Logger name="com.bew.mojo.buildnumber.simple.CreateXMLMojoTest" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>        
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
